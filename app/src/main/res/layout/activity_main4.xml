<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4030FF"
    tools:context=".MainActivity4">

    <TextView
        android:id="@+id/tv_4_1"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:text="Welcome!"
        android:textSize="60sp"
        android:textColor="@color/white"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/edt_4_1"
        android:layout_width="320dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/tv_4_1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="45dp"
        android:layout_marginTop="100dp"
        android:hint="your name"
        android:textColorHint="#ADBDFF"
        android:paddingStart="30dp"
        android:background="@drawable/edt_background"/>

    <EditText
        android:id="@+id/edt_4_2"
        android:layout_width="320dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/edt_4_1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        android:hint="your email"
        android:textColorHint="#ADBDFF"
        android:paddingStart="30dp"
        android:background="@drawable/edt_background" />

    <EditText
        android:id="@+id/edt_4_3"
        android:layout_width="320dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/edt_4_2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        android:hint="create password"
        android:textColorHint="#ADBDFF"
        android:paddingStart="30dp"
        android:background="@drawable/edt_background"/>

    <TextView
        android:id="@+id/tv_4_2"
        android:layout_width="175dp"
        android:layout_height="25dp"
        android:text="password strength"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="45dp"
        app:layout_constraintTop_toBottomOf="@id/edt_4_3"
        android:layout_marginTop="10dp"
        android:textColor="#AFBDBA"/>

    <Button
        android:id="@+id/bt_4_1"
        android:layout_width="150dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="45dp"
        app:layout_constraintTop_toBottomOf="@id/tv_4_2"
        android:layout_marginTop="30dp"
        android:background="@drawable/bt_4"
        android:hint="Create account"
        android:textColorHint="@color/black"/>

    <Button
        android:id="@+id/bt_4_2"
        android:layout_width="130dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toEndOf="@id/bt_4_1"
        android:layout_marginStart="45dp"
        app:layout_constraintTop_toBottomOf="@id/tv_4_2"
        android:layout_marginTop="30dp"
        android:background="@drawable/bt_4_1"
        android:text="Sign in" />
</androidx.constraintlayout.widget.ConstraintLayout>