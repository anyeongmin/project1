<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/lv_1_1"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="132dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/et_1_1"
        android:layout_width="150dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_1_2"
        android:layout_width="150dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_1_1"/>

    <Button
        android:id="@+id/bt_1_1"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="+"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/et_1_2"
        app:layout_constraintEnd_toEndOf="parent"/>

    <SeekBar
        android:id="@+id/sb1"
        android:max="255"
        android:layout_width="200dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <SeekBar
        android:id="@+id/sb2"
        android:max="255"
        android:layout_width="200dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sb1"
        />

    <SeekBar
        android:id="@+id/sb3"
        android:max="255"
        android:layout_width="200dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sb2"/>

    <View
        android:id="@+id/v"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:background="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/sb1"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/bt_1_2"
        android:layout_width="75dp"
        android:layout_height="39dp"
        android:text="next"
        app:layout_constraintEnd_toStartOf="@+id/bt_1_1"
        app:layout_constraintTop_toBottomOf="@+id/et_1_2" />
</androidx.constraintlayout.widget.ConstraintLayout>